const mongoose = require('mongoose');

const shiftSchema = new mongoose.Schema({
    title: {
        type: String,
        required: [true, 'Please add a shift title'],
        trim: true
    },
    description: {
        type: String,
        default: ''
    },
    startTime: {
        type: Date,
        required: [true, 'Please add a start time']
    },
    endTime: {
        type: Date,
        required: [true, 'Please add an end time']
    },
    employees: [{
        type: mongoose.Schema.Types.ObjectId,
        ref: 'User'
    }],
    requiredEmployees: {
        type: Number,
        required: true,
        default: 1
    },
    confirmedEmployees: [{
        type: mongoose.Schema.Types.ObjectId,
        ref: 'User'
    }],
    department: {
        type: String,
        default: 'General'
    },
    status: {
        type: String,
        enum: ['draft', 'published', 'cancelled', 'completed'],
        default: 'published'
    },
    hourlyRate: {
        type: Number,
        default: 20
    },
    location: {
        type: String,
        default: 'Main Office'
    },
    createdBy: {
        type: mongoose.Schema.Types.ObjectId,
        ref: 'User',
        required: true
    },
    createdAt: {
        type: Date,
        default: Date.now
    }
});

shiftSchema.virtual('duration').get(function () {
    const duration = (this.endTime - this.startTime) / (1000 * 60 * 60);
    return Math.round(duration * 10) / 10;
});

shiftSchema.virtual('totalCost').get(function () {
    return this.duration * this.hourlyRate * this.requiredEmployees;
});

module.exports = mongoose.model('Shift', shiftSchema);